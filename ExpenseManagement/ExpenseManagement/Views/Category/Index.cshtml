@model ExpenseManagement.Models.CategoryViewModel

@{
    ViewData["Title"] = "Categories";
    Layout = "_DashboardSideNav";
}

<h1>Categories</h1>
<div class="row" mt-3>
	<div class="col-md-6 mb-2">
		<div class="div-card">
			<h3>
				Expenses
			</h3>
			<button type="button" class="btn btn-success btn-sm mb-2" data-bs-toggle="modal" data-bs-target="#addCategoryModal" data-controller="Category" data-action="CreateCategory" data-type="Expense">
				<i class="bi bi-plus"></i> Add
			</button>
			<table class="table table-dark table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Type</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var category in Model.ExpenseCategories)
					{
						<tr>
							<td>
								@category.Name
							</td>
							<td>
								@category.Type</td>
							<td>
								<button type="button" class="btn btn-primary btn-sm" data-id="@category.Id" data-bs-toggle="modal" data-bs-target="#editCategoryModal" data-controller="Category" data-action="EditCategory">
									<i class="bi bi-pencil"></i> Edit
								</button>
								<button type="button" class="btn btn-danger btn-sm" data-id="@category.Id" data-bs-toggle="modal" data-bs-target="#deleteCategoryModal" data-title="Delete Category" data-controller="Category" data-action="Delete Category">
									<i class="bi bi-trash"></i> Delete
								</button>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
    </div>
	<div class="col-md-6 mb-2">
		<div class="div-card">
			<h3>
				Income
			</h3>
			<button type="button" class="btn btn-success btn-sm mb-2" data-bs-toggle="modal" data-bs-target="#addCategoryModal" data-title="Add Category" data-controller="Category" data-action="CreateCategory" data-type="Income">
				<i class="bi bi-plus"></i> Add
			</button>
			<table class="table table-dark table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Type</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var category in Model.IncomeCategories)
					{
						<tr>
							<td>
								@category.Name
							</td>
							<td>
								@category.Type
							</td>
							<td>
								<button type="button" class="btn btn-primary btn-sm" data-id="@category.Id" data-transaction="GetCategory" data-bs-toggle="modal" data-bs-target="#editCategoryModal" data-controller="Category" data-action="EditCategory">
									<i class="bi bi-pencil"></i> Edit
								</button>
								<button type="button" class="btn btn-danger btn-sm" data-id="@category.Id" data-bs-toggle="modal" data-bs-target="#deleteCategoryModal" data-controller="Category" data-action="DeleteCategory">
									<i class="bi bi-trash"></i> Delete
								</button>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<div>
	@await Html.PartialAsync("_AddCategoryModal", new ExpenseManagement.Models.AddCategoryModel())
	@await Html.PartialAsync("_EditCategoryModal", new ExpenseManagement.Models.EditCategoryModel())
	@await Html.PartialAsync("_DeleteCategoryModal", new ExpenseManagement.Models.DeleteModel())
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#addCategoryModal').on('show.bs.modal', function (event) {
				var button = $(event.relatedTarget); // Button that triggered the modal
				var type = button.data('type'); // Extract info from data-* attributes

				var modal = $(this);
				modal.find('form').attr('action', '/' + button.data('controller') + '/' + button.data('action'));

				// Set the select value
				modal.find('#categoryType').val(type);
			});

			$('#submitAddCategory').click(function () {
				$('#addCategoryForm').submit();
			});

			$('#editCategoryModal').on('show.bs.modal', function (event) {
				var button = $(event.relatedTarget); // Button that triggered the modal
				var id = button.data('id'); // Extract info from data-* attributes

				var modal = $(this);
				modal.find('form').attr('action', '/' + button.data('controller') + '/' + button.data('action'));
				modal.find('#categoryId').val(id);

				$.ajax({
					url: '/Category/GetCategory',
					type: 'GET',
					data: { id: id },
					success: function (data) {
						modal.find('#categoryName').val(data.name);
						modal.find('#categoryType').val(data.type);
					}
				});
			});

			$('#submitEditCategory').click(function () {
				$('#EditCategoryForm').submit();
			});

			$('#deleteCategoryModal').on('show.bs.modal', function (event) {
				var button = $(event.relatedTarget); // Button that triggered the modal
				var id = button.data('id'); // Extract info from data-* attributes

				var modal = $(this);
				modal.find('form').attr('action', '/' + button.data('controller') + '/' + button.data('action'));
				modal.find('#deleteCategoryId').val(id);
			});

			$('#confirmDeleteCategory').click(function () {
				$('#deleteCategoryForm').submit();
			});
		});
	</script>
}
