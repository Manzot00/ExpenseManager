@model ExpenseManagement.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div>
        <a asp-controller="Home" asp-action="Index" class="no-underline">
            <div class="card shadow-sm border-0 mb-3 logo-card" style="width: 24rem; border-radius: 1rem;">
                <div class="card-body text-center">
                    <i class="bi bi-piggy-bank" style="font-size: 4rem; color: #fff; margin-right: 1rem;"></i>
                    <h1 class="card-title mb-0" style="color: #fff;">Expense Manager</h1>
                </div>
            </div>
        </a>
        <div class="card shadow-sm border-0" style="width: 24rem; border-radius: 1rem;">
            <div class="card-body">
                <h4 class="card-title mb-4">Please log in to continue.</h4>
                <form asp-action="Login" method="post" novalidate>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label mb-2"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter email address" required />
                        <span id="emailError" asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label mb-2"></label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" required minlength="8" />
                        <span id="passwordError" asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary btn-block" />
                    </div>
                </form>
                <div class="text-danger mt-2">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
                <hr />
                <div class="text-center mt-3">
                    If you don't have an account, please <a asp-controller="Home" asp-action="Register">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>

