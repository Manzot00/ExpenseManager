<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .sidenav {
            height: 100%;
            width: 250px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #1c1c1c;
            overflow-x: hidden;
            padding-top: 20px;
        }

        .sidenav a, .sidenav form.logout button {
            padding: 10px 20px;
            margin: 5px;
            text-decoration: none;
            font-size: 18px;
            color: #b3b3b3;
            display: block;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .sidenav a:hover, .sidenav a.active, .sidenav form.logout button:hover {
            background-color: #127b3a;
            color: #fff;
        }

        .sidenav i {
            margin-right: 15px; /* Increased margin for better spacing */
            font-size: 1.2rem;
        }

        .main {
            margin-left: 260px; /* Same as the width of the sidenav */
            padding: 20px;
        }

        .sidenav form.logout {
            position: absolute;
            bottom: 20px;
            width: calc(100% - 10px); /* Same as the width minus padding */
            margin: 5px;
        }

        .sidenav form.logout button {
            width: 100%;
            background-color: #1c1c1c;
            color: #b3b3b3;
            border: none;
            text-align: left;
            padding: 10px 20px;
            margin: 5px 0;
            font-size: 18px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }
    </style>
</head>
<body>
    <nav class="sidenav">
        <a asp-controller="Admin" asp-action="Index" class="@(ViewData["ActivePage"] as string == "Admin" ? "active" : "")">
            <i class="bi bi-house-door"></i>Dashboard
        </a>
        <form asp-controller="Dashboard" asp-action="Logout" method="post" class="logout">
            <button type="submit">
                <i class="bi bi-box-arrow-right"></i>Logout
            </button>
        </form>
    </nav>
    <div class="main">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>